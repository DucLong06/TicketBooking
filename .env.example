# =============================================================================
# THEATER BOOKING SYSTEM - ENVIRONMENT VARIABLES
# =============================================================================

# -----------------------------------------------------------------------------
# Django Backend Configuration
# -----------------------------------------------------------------------------

# Environment
DJANGO_ENVIRONMENT=development
DEBUG=1

# Database Configuration
DATABASE_URL=postgresql://theater_user:theater_pass@db:5432/theater_booking
POSTGRES_DB=theater_booking
POSTGRES_USER=theater_user
POSTGRES_PASSWORD=theater_pass
POSTGRES_PORT=db
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Django Secret Key (Generate new one for production)
SECRET_KEY=your-super-secret-key-change-this-in-production

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_ALL_ORIGINS=1

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_LIFETIME=60  # minutes
JWT_REFRESH_TOKEN_LIFETIME=7  # days

# -----------------------------------------------------------------------------
# Vue Frontend Configuration
# -----------------------------------------------------------------------------

# API Configuration
VITE_API_URL=http://localhost:8000/api
VITE_WS_URL=ws://localhost:8000/ws
VITE_API_TIMEOUT=30000

# App Configuration
VITE_APP_NAME=Theater Booking System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Online Theater Ticket Booking System

# -----------------------------------------------------------------------------
# Payment Gateway Configuration (VNPAY)
# -----------------------------------------------------------------------------

# VNPAY Settings
VNP_TMNCODE=your_vnpay_tmn_code
VNP_HASTSECRET=your_vnpay_hash_secret_key
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:5173/payment/return
VNPAY_NOTIFY_URL=http://localhost:8000/api/payment/vnpay/return/

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------

# Email Backend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Default From Email
DEFAULT_FROM_EMAIL=Theater Booking <noreply@theaterbooking.com>

# -----------------------------------------------------------------------------
# Celery Configuration
# -----------------------------------------------------------------------------

# Celery Broker
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=Asia/Ho_Chi_Minh

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------

# Log Level
LOG_LEVEL=INFO
LOG_FILE=logs/theater_booking.log

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------

# Allowed Hosts
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,theater_backend

# CSRF Configuration
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Session Configuration
SESSION_COOKIE_SECURE=0  # Set to 1 in production with HTTPS
SESSION_COOKIE_HTTPONLY=1
SESSION_COOKIE_SAMESITE=Lax

# CSRF Cookie
CSRF_COOKIE_SECURE=0  # Set to 1 in production with HTTPS
CSRF_COOKIE_HTTPONLY=1

# -----------------------------------------------------------------------------
# Performance Configuration
# -----------------------------------------------------------------------------

# Cache TTL (seconds)
CACHE_TTL=300
CACHE_TTL_EVENTS=600
CACHE_TTL_VENUES=1800

# Database Connection Pool
DB_CONN_MAX_AGE=600
DB_CONN_POOL_SIZE=20

# -----------------------------------------------------------------------------
# Development Configuration
# -----------------------------------------------------------------------------

# Django Debug Toolbar (development only)
ENABLE_DEBUG_TOOLBAR=1

# Static/Media Files
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/app/staticfiles/
MEDIA_ROOT=/app/media/

# -----------------------------------------------------------------------------
# Production Configuration (Override for production)
# -----------------------------------------------------------------------------

# Set these in production environment:
# DEBUG=0
# DJANGO_ENVIRONMENT=production
# SESSION_COOKIE_SECURE=1
# CSRF_COOKIE_SECURE=1
# CORS_ALLOW_ALL_ORIGINS=0
# SECURE_SSL_REDIRECT=1
# SECURE_BROWSER_XSS_FILTER=1
# SECURE_CONTENT_TYPE_NOSNIFF=1